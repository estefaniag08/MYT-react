{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/agenda",
        "destination": "/agenda.html"
      },
      {
        "source": "/horario",
        "destination": "/horario.html"
      },
      {
        "source": "/crear_cuenta",
        "destination": "/crear_cuenta.html"
      },
      {
        "source": "/recuperar_cuenta",
        "destination": "/recuperar_cuenta.html"
      }
    ]
  }
}
